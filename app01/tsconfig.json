{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "_files",
    "target": "ESNext",
    "lib": ["ESNext", "ScriptHost", "DOM", "DOM.Iterable"],
    "declaration": false,
    "declarationMap": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "paths": {
      "@hr/components/*": ["node_modules/@hr/components/src/*"],
      "@hr/pages/*": ["node_modules/@hr/pages/src/*"],
      "@hr/core/*": ["node_modules/@hr/core/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
